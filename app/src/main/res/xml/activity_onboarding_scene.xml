<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="400">
        <KeyFrameSet></KeyFrameSet>
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@id/btnNext" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/containerWelcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Constraint
            android:id="@+id/containerFillData"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintStart_toEndOf="@id/containerWelcome" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/containerWelcome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            motion:layout_constraintEnd_toStartOf="@id/containerFillData" />
        <Constraint
            android:id="@+id/containerFillData"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ConstraintSet>
</MotionScene>